##########################################
#  ALAN Internationalization Project     #
#  https://github.com/alan-if/alan-i18n  #
##########################################

root = true

## ALAN Related Files
#####################

# Common settings for all Alan files
[*.{alan,i,a3sol,a3log}]
charset = unset
end_of_line = unset
indent_style = space
indent_size = unset

# Additional settings for non-generated Alan files
[*.{alan,i,a3sol}]
trim_trailing_whitespace = true
insert_final_newline = true


## Repository Configurations
############################
[.{git*,editorconfig,*.yml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true

[.gitmodules]
indent_style = tab


## Markdown GFM
###############
[*.md]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


## Shell Scripts
################
[*.sh]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


## Plain-Text Files
###################
[*.txt]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true


[LICENSE]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = unset
trim_trailing_whitespace = true
insert_final_newline = true

# EOF #
